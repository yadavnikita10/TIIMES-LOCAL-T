<script>

    $(function () {
        $(".FromD").datepicker({
            dateFormat: 'dd/mm/yy',//check change
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+50"
        });
    });
</script>
<script>

    $(function () {
        $(".ToD").datepicker({
            dateFormat: 'dd/mm/yy',//check change
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+50"
        });
    });
</script>


@using (Html.BeginForm("LessionLearntPerformance", "InspectorPerformance", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{

    <div class="main-content3 xs-max-height">
        <div class="container-fluid">

            <!--Start of header-->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-10">
                        <a href="@Url.Action("Welcome","Login")" class="logo">
                            <img src="~/AllJsAndCss/images/logoN.png" alt="" style="max-width: 210%;margin-top: -59px;">
                        </a>
                        <h3 class="dynamic-page-title dynamic-page-title-2  text-left" style="color: #001ED2;font-size:23px;font-weight:bold;padding-left:147px;padding-top:10px;font-family:'TNG Pro'; ">TUV India Private Limited <br />Lession Learnt Performance</h3>
                    </div>

                    <div class="col-lg-2" style="padding-right:20px;">
                        <button type="button" class="btn btn-info" style="margin-top: 16px;margin-left: 37px;width: 150px;background-color: #104193;color:white;border-radius: 0;" onclick="Redirect()">Go Back</button>

                    </div>
                </div>
            </div>




            <div class="col-xs-12">

                <div class="col-xs-12">
                    <h3 class="dynamic-page-title dynamic-page-title-2  text-left"><b></b></h3>

                    <div class="row">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>From Date:</label>
                                @Html.TextBoxFor(model => model.FromDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select Start Date", @class = "form-control form-control-custom FromD", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.fromD, "", new { @class = "text-danger validation-msg" })
                            </div>
                        </div>


                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>To Date:</label>
                                @Html.TextBoxFor(model => model.ToDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select To Date", @class = "form-control form-control-custom ToD", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.ToD, "", new { @class = "text-danger validation-msg" })
                            </div>

                        </div>

                        <div class="col-xs-2">
                            <div class="form-group">
                                <button type="submit" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" style="margin-top: 22px;">Search</button>

                            </div>

                        </div>

                    </div>

                </div>

                <br />


            </div>


            <div class="form-group" style="padding-left:25px;">
                <hr class="custom-hr1">
            </div>


            <div class="col-lg-12">
                @*<div class="col-xs-12" style="overflow:auto;height:500px;width:100%">
                    <table id="example" class="equal-height-table table-bordered table-striped" style="border: 1px solid black;font-size:13px; padding:0px; margin:5px;" width="100%">*@
                <div class="col-xs-12 table-container">
                    <table class="display dataTable no-footer fixed-size-table" id="example">
                        <thead>
                            @*<tr style="padding:0px 0px; background-color: #050585; color: white; text-align:center;">*@
                            <tr style="background-color: #104193; border:1px solid #00003C; font-size:13px; color: #ffffff; text-align:center;">
                                <th style="width:200px;">User Name</th>
                                <th style="width:90px;">Branch Name</th>
                                <th>Show</th>
                                <th>Read</th>
                                <th>Performance</th>




                            </tr>
                        </thead>
                        @{
                            var items = ViewData["Lessionlearnt"] as IList<TuvVision.Models.InspectorPerformance>;


                            if (items != null)
                            {

                                <tbody>
                                    @foreach (var obj in ViewData["Lessionlearnt"] as IEnumerable<TuvVision.Models.InspectorPerformance>)
                                    {
                                        <tr>
                                            <td>@obj.Username</td>
                                            <td>@obj.BranchName</td>
                                            <td>@obj.ShowCount</td>
                                            <td>@obj.ReadCount</td>
                                            <td>@obj.Lessionlearntperformance</td>




                                        </tr>
                                    }


                                </tbody>
                            }
                        }

                        @if (Model.GrandTotal != null)
                        {
                            <tfoot>
                                <tr>
                                    <td style="font-size: small; background-color: lightgray;">@Model.GrandTotal.Username</td>
                                    <td style="font-size: small; background-color: lightgray;">@Model.GrandTotal.BranchName</td>
                                    <td style="font-size: small; background-color: lightgray;">@Model.GrandTotal.GrandTotalShowCount</td>
                                    <td style="font-size: small; background-color: lightgray;">@Model.GrandTotal.GrandTotalReadCount</td>
                                    <td style="font-size: small; background-color: lightgray;">@(Model.GrandTotal.GrandLessionlearntperformance.ToString("0.##"))%</td>
                                    




                                </tr>
                            </tfoot>
                        }

                    </table>
                </div>

            </div>

        </div>



    </div>


                            }





<script>
    $(document).ready(function() {
        $('#example').DataTable({
            "searching": true, // Enable search functionality
            "ordering": false,   // Enable sorting functionality
            "paging": false

        });
    });
</script>


<script>
function Redirect() {
        window.location.href = "@Url.Action("Welcome", "Login")"
        }
</script>


