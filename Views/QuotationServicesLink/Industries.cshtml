@model TuvVision.Models.QuotationServices
@{
    ViewBag.Title = "Industries";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}

<script type="text/javascript" language="javascript" src="~/AllJsAndCss/datatable/js/jquery.dataTables.js"></script>
<script src="~/AllJsAndCss/datatable/js/jquery.dataTables.js"></script>
<script src="~/AllJsAndCss/js/datatable-custom.js"></script>

<div class="main-content3 xs-max-height grey-bg-f3">
    <div class="grey-bg-f3">
        <!--Start of header-->
        <div class="container-fluid">
            <div class="col-xs-12 col-sm-offset-1 col-sm-10">

                <div class="col-xs-12 form-col">
                    <div class="row">
                        <br />
                        @*<h3 class="dynamic-page-title dynamic-page-title-2">Image</h3>*@
                        @*<a href="@Url.Action("IvrReports","VisitReport")" class="btn btn-info dynamic-function-btn dynamic-function-btn-2"><i class="fa fa-long-arrow-left"></i> Go Back</a>*@

                        <div class="col-xs-12">
                            <div class="white-bg section-box-shadow">
                                <h3 class="form-page-title">Industries</h3>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-offset-1 col-sm-10">

                                        <div class="form-box">
                                            <form method="post" enctype="multipart/form-data">

                                                @Html.HiddenFor(m => m.PKIndustriesId)
                                               

                                              

                                                   

                                                   
                                                    <div class="row">
                                                        <div class="col-xs-12 col-sm-3">
                                                            <div class="form-group">
                                                                <label>Select Service Name:</label>

                                                                @if (ViewBag.ServiceName != null)
                                                                {
                                                                    @Html.DropDownListFor(m => m.FkServiceId, ViewBag.ServiceName as IEnumerable<SelectListItem>, "--Select Service--", new { @class = "form-control" })
                                                                    @Html.HiddenFor(m => m.FkServiceId)
                                                                }
                                                                @Html.ValidationMessageFor(model => model.FkServiceId, "", new { @class = "text-danger validation-msg" })
                                                            </div>
                                                        </div>





                                                        <div class="col-xs-12 col-sm-3">
                                                            <div class="form-group">
                                                                <label>Industy Name:</label>

                                                                @Html.TextBoxFor(model => model.IndustryName, new { @placeholder = "Industry Name", @class = "form-control" })
                                                                @Html.ValidationMessageFor(model => model.IndustryName, "", new { @class = "text-danger validation-msg" })
                                                            </div>
                                                        </div>

                                                        <div class="col-xs-12 col-sm-3">
                                                            <div class="form-group">
                                                                <label>
                                                                    Industry Image <span class="required"></span><br />
                                                                    <span>Size :- (56h * 56w)</span>
                                                                </label>
                                                                <input type="file" class="inputupload" name="img_Banner" id="img_Banner" />
                                                                @Html.HiddenFor(m => m.IndustryImage)
                                                                @if (Model != null)
                                                                {
                                                                    <a href="~/QuotationHtml/QuotationServices/@Html.DisplayFor(m => m.IndustryImage)">
                                                                        <img src="~/QuotationHtml/QuotationServices/@Html.DisplayFor(m => m.IndustryImage)" height="50px" width="50px" />
                                                                        @Html.ValidationMessageFor(m => m.IndustryImage, "", new { @class = "text-danger", })
                                                                    </a>
                                                                }
                                                            </div>
                                                        </div>



                                                    </div>


                                                    <div class="col-xs-12 text-center">

                                                        <button type="submit" class="btn btn-default insert-form-btn"><i class="fa fa-plus-circle"></i>Save</button>

                                                    </div>
</form>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-12">
                                            <table id="example" class="display custom-table" cellspacing="0" width="100%">

                                                <thead>
                                                    <tr>
                                                        <th class="remove-search">Sr No </th>
                                                        <th class="remove-search">Industry Name</th>
                                                        <th class="remove-search">Service Name</th>
                                                        <th class="remove-search">Image</th>
                                                        <th class="remove-search">Action</th>
                                                    </tr>
                                                </thead>

                                                <tbody>

                                                    @{
                                                        int i = 0;
                                                    }
                                                    @foreach (var item in ViewData["CostSheet"] as IEnumerable<TuvVision.Models.QuotationServices>)
                                                    {
                                                        i = i + 1;
                                                        <tr>

                                                            <td>@i</td>
                                                            <td>@item.IndustryName</td>
                                                            <td>@item.ServiceName</td>
                                                            <td>
                                                                <a href="~/QuotationHtml/QuotationServices/@item.IndustryImage">
                                                                    <img src="~/QuotationHtml/QuotationServices/@item.IndustryImage" height="50px" width="50px" />
                                                                 
                                                                </a>

                                                            </td>
                                                            <td class="less-width">
                                                                <a href="@Url.Action("Industries", "QuotationServicesLink", new {@PKIndustriesId = item.PKIndustriesId })" title="Edit"><span class="fa fa-pencil"></span>&nbsp;</a>
                                                                <a href="@Url.Action("DeleteIndustries", "QuotationServicesLink", new {@PKIndustriesId = item.PKIndustriesId })" onclick="return confirm('Are you sure you want to Delete this Record?')" title="Delete"><span class="fa fa-trash-o"></span>&nbsp;</a>
                                                                @{

                                                                }
                                                            </td>

                                                        </tr>
                                                                    }
                                                </tbody>
                                            </table>
                                        </div>



                                        <!--Contact Details By Manoj -->


                                    </div><!-- /.box-shadow -->

                                </div>

                            </div>
                        </div>


                    </div>
                </div>
            </div>


        </div>
    </div>
</div>



