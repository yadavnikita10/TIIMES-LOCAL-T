@model TuvVision.Models.QuotationServices
@{
    ViewBag.Title = "QuotationProjects";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}

<script type="text/javascript" language="javascript" src="~/AllJsAndCss/datatable/js/jquery.dataTables.js"></script>
<script src="~/AllJsAndCss/datatable/js/jquery.dataTables.js"></script>
<script src="~/AllJsAndCss/js/datatable-custom.js"></script>

<script src="//cdn.ckeditor.com/4.6.0/full/ckeditor.js"></script>


<div class="main-content3 xs-max-height grey-bg-f3">
    <div class="grey-bg-f3">
        <!--Start of header-->
        <div class="container-fluid">
            <div class="col-xs-12 col-sm-offset-1 col-sm-10">

                <div class="col-xs-12 form-col">
                    <div class="row">
                        <br />
                        @*<h3 class="dynamic-page-title dynamic-page-title-2">Image</h3>*@
                        @*<a href="@Url.Action("IvrReports","VisitReport")" class="btn btn-info dynamic-function-btn dynamic-function-btn-2"><i class="fa fa-long-arrow-left"></i> Go Back</a>*@

                        <div class="col-xs-12">
                            <div class="white-bg section-box-shadow">
                                <h3 class="form-page-title">Projects</h3>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-offset-1 col-sm-10">

                                        <div class="form-box">
                                            <form method="post" enctype="multipart/form-data">

                                                @Html.HiddenFor(m => m.PKProjectId)







                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-6">
                                                        <div class="form-group">
                                                            <label>Select Industry Name:</label>

                                                            @if (ViewBag.IndustryName != null)
                                                            {
                                                                @Html.DropDownListFor(m => m.FkIndustryId, ViewBag.IndustryName as IEnumerable<SelectListItem>, "--Select Industry--", new { @class = "form-control" })
                                                                @Html.HiddenFor(m => m.FkIndustryId)
                                                            }
                                                            @Html.ValidationMessageFor(model => model.FkIndustryId, "", new { @class = "text-danger validation-msg" })
                                                        </div>
                                                    </div>





                                                    <div class="col-xs-12 col-sm-6">
                                                        <div class="form-group">
                                                            <label>Title:</label>

                                                            @Html.TextBoxFor(model => model.Title, new { @placeholder = "Title", @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger validation-msg" })
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-12" style="width: 100%;">
                                                        <div class="form-group">
                                                            <label>Description:</label>
                                                            @Html.TextAreaFor(model => model.Description)
                                                           
                                                           
                                                       
                                                            <script type="text/javascript">
                                                                CKEDITOR.replace('Description');
                                                            </script>
                                                        </div>
                                                    </div>
                                                    </div>


                                                    <div class="col-xs-12 col-sm-6">
                                                        <div class="form-group">
                                                            <label>
                                                                Project Image <span class="required"></span><br />
                                                                <span>Size :- (56h * 56w)</span>
                                                            </label>
                                                            <input type="file" class="inputupload" name="img_Banner" id="img_Banner" />
                                                            @Html.HiddenFor(m => m.ProjectImage)
                                                            @if (Model != null)
                                                            {
                                                            <a href="~/QuotationHtml/QuotationServices/@Html.DisplayFor(m => m.ProjectImage)">
                                                                <img src="~/QuotationHtml/QuotationServices/@Html.DisplayFor(m => m.ProjectImage)" height="50px" width="50px" />
                                                                @Html.ValidationMessageFor(m => m.IndustryImage, "", new { @class = "text-danger", })
                                                            </a>
                                                            }
                                                        </div>
                                                    </div>






                                                    <div class="col-xs-12 text-center">

                                                        <button type="submit" class="btn btn-default insert-form-btn"><i class="fa fa-plus-circle"></i>Save</button>

                                                    </div>
</form>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="col-xs-12">
                                            <table id="example" class="display custom-table" cellspacing="0" width="100%">

                                                <thead>
                                                    <tr>
                                                        <th class="remove-search">Sr No </th>
                                                        <th class="remove-search">Industry Name</th>
                                                        <th class="remove-search">Project Title</th>
                                                        <th class="remove-search">Image</th>
                                                        <th class="remove-search">Action</th>
                                                    </tr>
                                                </thead>

                                                <tbody>

                                                    @{
                                                        int i = 0;
                                                    }
                                                    @foreach (var item in ViewData["CostSheet"] as IEnumerable<TuvVision.Models.QuotationServices>)
                                                    {
                                                        i = i + 1;
                                                        <tr>

                                                            <td>@i</td>
                                                            <td>@item.FkIndustryId</td>
                                                            <td>@item.Title</td>
                                                            <td>
                                                                <a href="~/QuotationHtml/QuotationServices/@item.ProjectImage">
                                                                    <img src="~/QuotationHtml/QuotationServices/@item.ProjectImage" height="50px" width="50px" />

                                                                </a>

                                                            </td>
                                                            <td class="less-width">
                                                                <a href="@Url.Action("QuotationProjects", "QuotationServicesLink", new {@PKProjectId = item.PKProjectId })" title="Edit"><span class="fa fa-pencil"></span>&nbsp;</a>
                                                                <a href="@Url.Action("DeleteProjects", "QuotationServicesLink", new {@PKProjectId = item.PKProjectId })" onclick="return confirm('Are you sure you want to Delete this Record?')" title="Delete"><span class="fa fa-trash-o"></span>&nbsp;</a>
                                                                @{

                                                                }
                                                            </td>

                                                        </tr>
                                                                    }
                                                </tbody>
                                            </table>
                                        </div>



                                        <!--Contact Details By Manoj -->


                                    </div><!-- /.box-shadow -->

                                </div>

                            </div>
                        </div>


                    </div>
                </div>
            </div>


        </div>
    </div>
</div>



