@model TuvVision.Models.CallsModel
@using NonFactors.Mvc.Grid;
@using System.Web.Mvc;
@{
    ViewBag.Title = "executingBranchSummary";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
    //Layout = null;
}

@*DATEPICKER*@
@*<script src="https://code.jquery.com/jquery-1.10.2.js"></script>*@
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" />
<link rel="stylesheet" type="text/css" href="styles.css">




<style>
    /* Set the table layout to fixed */
    table {
        table-layout: fixed;
        width: 100%;
    }

    /* Apply the same width and a border to all table cells */
    td {
        width: 100px; /* Adjust this value as needed */
        border: 1px solid black; /* Add a 1px solid border */
        padding: 5px; /* Optional: Add padding for cell content */
    }

    /* Ensure text doesn't overflow and wraps within cells */
    td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>


   
</style>

@*calender control*@

<script>

    $(function () {
        $(".FromD").datepicker({
            dateFormat: 'dd/mm/yy',//check change
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+50"
        });
    });
</script>
<script>

    $(function () {
        $(".ToD").datepicker({
            dateFormat: 'dd/mm/yy',//check change
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+50"
        });
    });
</script>






@using (Html.BeginForm("ExecutingBranchSummary", "MISOPEReport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{

    <div class="main-content3 xs-max-height">
        <div class="container-fluid">

            <!--Start of header-->
            @*<a href="@Url.Action("Welcome", "Login")" class="btn btn-info dynamic-function-btn"><i class="fa fa-long-arrow-left"></i> Go Back</a>*@


            <div class="col-xs-12">

                <div class="col-xs-12">
                    <h3 class="dynamic-page-title dynamic-page-title-2  text-left"><b>CALL ANALYSIS FOR EXECUTING BRANCH</b></h3>
                    <br />

                    @*<button type="button" value="ExportToExcel" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" onclick="location.href='@Url.Action("ExportIndex2", "MISOPEReport")'"
                            style="border:none;">
                        Export To Excel
                    </button>*@

                    <br />
                    <br />
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>From Date:</label>
                                @Html.TextBoxFor(model => model.FromDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select Start Date", @class = "form-control form-control-custom FromD", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger validation-msg" })
                            </div>
                        </div>


                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>To Date:</label>
                                @Html.TextBoxFor(model => model.ToDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select To Date", @class = "form-control form-control-custom ToD", autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger validation-msg" })
                            </div>

                        </div>

                        <div class="col-xs-2">
                            <div class="form-group">
                                <button type="submit" class="btn btn-info dynamic-function-btn dynamic-function-btn-2">Search</button>

                            </div>

                        </div>

                    </div>

                </div>

                <br />


            </div>


            <div class="form-group" style="padding-left:25px;">
                <hr class="custom-hr1">
            </div>


            <div class="col-lg-12">
                @*<div class="col-xs-12" style="overflow:auto;height:500px;width:100%">
            <table id="example" class="display dataTable no-footer" style="width:180%;">*@
                <div class="col-xs-12" style="overflow:auto;height:500px;width:99%">
                    <table class="display dataTable no-footer" style="width:180%;" id="example">
                        <thead>
                            <tr style="background-color: #050585; color: white; text-align:center;">
                                <th>Branch Name</th>
                                <th>Excecuted calls </th>
                                <th>Own</th>
                                <th>%</th>
                                <th>Other branch</th>
                                <th>%</th>
                                <th>ontime</th>
                                <th>%</th>
                                <th>Ontime own calls</th>
                                <th>%</th>
                                <th>Ontime other branches calls</th>
                                <th>%</th>
                                <th>delayed</th>
                                <th>%</th>
                                <th>Delayed own calls</th>
                                <th>%</th>
                                <th>Delayed other branches calls</th>
                                <th>%</th>

                            </tr>
                        </thead>
                        @{
                            var items = ViewData["ListData"] as IList<TuvVision.Models.CallsModel>;


                            if (items != null)
                            {

                                <tbody>
                                    @foreach (var obj in ViewData["ListData"] as IEnumerable<TuvVision.Models.CallsModel>)
                                    {
                                        <tr>
                                            <td>@obj.Branch_Name</td>
                                            <td>@obj.TotalCalls</td>
                                            <td>@obj.Own</td>
                                            <td>@obj.OwnPercentage%</td>
                                            <td>@obj.Other</td>
                                            <td>@obj.OtherPercentage%</td>
                                            <td>@obj.Ontime</td>
                                            <td>@obj.OnTimePercentage%</td>
                                            <td>@obj.OntimeOwnCalls</td>
                                            <td>@obj.OntimeOwnCallsPercentage%</td>
                                            <td>@obj.OntimeOtherCalls</td>
                                            <td>@obj.OntimeOtherCallsPercentage%</td>
                                            <td>@obj.DelayCount</td>
                                            <td>@obj.DelayCountPercentage%</td>
                                            <td>@obj.DelayedOwnCalls</td>
                                            <td>@obj.DelayedOwnCallsPercentage%</td>
                                            <td>@obj.DelayedOtherCalls</td>
                                            <td>@obj.DelayedOtherCallsPercentage%</td>
                                        </tr>
                                    }


                                </tbody>
                            }
                        }

                        @if (Model.GrandTotal != null)
                        {
                            <tfoot>
                                <tr>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.Branch_Name</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandTotalTotalCalls</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandOwn</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandOwnPercentage.ToString("0.##"))%</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandOther</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandOtherPercentage.ToString("0.##"))%</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandTotalOntime</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandTotalOnTimePercentage.ToString("0.##"))%</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandOntimeOwnCalls</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandTotalOnTimePercentage.ToString("0.##"))%</td>


                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandOntimeOtherCalls</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandOntimeOtherCallsPercentage.ToString("0.##"))%</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandTotalDelayCount</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandTotalDelayCountPercentage.ToString("0.##"))%</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandDelayedOwnCalls</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandDelayedOwnCallsPercentage.ToString("0.##"))%</td>
                                    <td style="font-size: small; background-color: grey;">@Model.GrandTotal.GrandDelayedOtherCalls</td>
                                    <td style="font-size: small; background-color: grey;">@(Model.GrandTotal.GrandDelayedOtherCallsPercentage.ToString("0.##"))%</td>
                                </tr>
                            </tfoot>
                        }




                    </table>


                </div>

            </div>

          
        </div>



    </div>


                        }






