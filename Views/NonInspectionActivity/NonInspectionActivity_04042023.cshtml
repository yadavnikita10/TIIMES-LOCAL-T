<script type="text/javascript">
    function onchangeddlStatus(val) {
        debugger;

        VisiblityOfCallNo(val)
        VisiblityOfControlNo(val)
        $('#JobNumber').val('');
        // $('#JobNumbersub').val('');

        
        if (val == "Marketing OnSite") {
            $('#NewCust').show();
        }
        else if (val == "Marketing OffSite") {
            $('#NewCust').show();
        }
        else {


            $('input[name="NewExistingCustomer"]').attr('checked', false);
            $('input[name="DomesticInternationVisit"]').attr('checked', false);

            $('#NewCust').hide();
        }


    }


    $(document).ready(function () {

        debugger;
        var val1 = $("#PT Option:selected").val();

        VisiblityOfCallNo(val1)
        VisiblityOfControlNo(val1)


        if (val1 == "Marketing OnSite") {
            $('#NewCust').show();
        }
        else if (val1 == "Marketing OffSite") {
            $('#NewCust').show();
        }
        else {


            $('input[name="NewExistingCustomer"]').attr('checked', false);
            $('input[name="DomesticInternationVisit"]').attr('checked', false);

            $('#NewCust').hide();
        }
    });


    function VisiblityOfCallNo(val1) {
        if (val1 == "QA Activity - Mentoring") {
            //  document.getElementById("txtCallNumber").style.display = "visible";
            $('#txtCallNumber').show();
            $('#callNo').show();
            $('#idR').show();

        }
        else if (val1 == "QA Activity - OnSite Monitoring") {
            $('#txtCallNumber').show();
            $('#callNo').show();
            $('#idR').show();
            $('#NewCust').show();
        }
        else if (val1 == "QA Activity - OffSite Monitoring") {
            $('#txtCallNumber').show();
            $('#callNo').show();
            $('#idR').show();
            $('#NewCust').hide();
        }
        else {
            //  document.getElementById("txtCallNumber").style.display = "none";
            $('#txtCallNumber').hide();
            $('#callNo').hide();
            $('#idR').hide();
            $('#NewCust').hide();
        }
    }

    function VisiblityOfControlNo(val2)
    {
        
        if (val2 == "Desk Expediting") {
            
            $('#ControlNo').hide();
            $('#ControlNoWithSubJob').show();
            $('#JobNumber').show();
            $('#ControlSpan').show();

        }
        else if (val2 == "Product Quality Service") {
            $('#ControlNo').hide();
            $('#ControlNoWithSubJob').show();
            $('#JobNumber').show();
            $('#ControlSpan').show();
        }
        else if (val2 == "Project Coordination") {//control no with sub job
            $('#ControlNo').show();
            $('#ControlNoWithSubJob').hide();
            $('#JobNumber').show();
            $('#ControlSpan').show();
        }
        else if (val2 == "Document reviewed / IRN-IVR issued offsite") {
            $('#ControlNo').hide();
            $('#ControlNoWithSubJob').show();
            $('#JobNumber').show();
            $('#ControlSpan').show();
        }
        else if (val2 == "QA Activity - Project") {//control no with sub job
            $('#ControlNo').show();
            $('#ControlNoWithSubJob').hide();
            $('#JobNumber').show();
            $('#ControlSpan').show();
        }
        else if (val2 == "QA Activity - Complaint Resolution") {
            $('#ControlNo').hide();
            $('#ControlNoWithSubJob').show();
            $('#JobNumber').show();
            $('#ControlSpan').show();
        }       
        else {
            $('#ControlNo').hide();
            $('#ControlNoWithSubJob').hide();
            $('#JobNumber').hide();
            $('#ControlSpan').hide();
        }
    }

</script>



