@model IEnumerable<TuvVision.Models.CompentencyMetrixView>

@{
    ViewBag.Title = "CompentencyApproval";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
    int date;
    string formFilled = string.Empty;
}


<div class="main-content3 xs-max-height">

    <!--Start of header-->
    <div class="container-fluid">
        <div class="row assignfixedwidth rp-15">

            <div class="col-xs-12">
                <h3 class="dynamic-page-title dynamic-page-title-2  text-left">F-MR-16 R06 : Competency Matrix </h3>
                <button type="button" id="a" value="ExportToExcel" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" onclick="location.href='@Url.Action("ExportIndex","CompentencyMetrixView")'">
                    Export To Excel
                </button>
            </div><!-- /.col -->

            <div class="col-xs-12">
                <hr class="custom-hr">
            </div><!-- /.col -->
            <!--Table was here-->

        </div>
        <div class="col-xs-12">
            <table id="example" class="display" cellspacing="0"  width="100%" style="paging:false" >
                <thead>
                    <tr>                        
                        <th>PK_UserId</th>
                        <th>Candidate Name</th>
                        <th>Form Filled</th>
                        <th>Employment Category</th>
                        <th>Stamp Number</th>
                        <th>Branch</th>
                        <th>Educational Qualification</th>                        
                        <th>Designation</th>
                        <th>Email ID</th>
                        <th>Mobile Number</th>
                        <th>Joining Date</th>
                        <th>Past Experience in YY:MM</th>
                        <th>Number Of Years With TUVI (Y & M)</th>
                        <th>Total Experience(Y & M)</th>
                        <th>Verified By</th>
                        <th>Approved By</th>
                        <th>Approval Status</th>

                        @foreach (var item in ViewData["Name"] as IEnumerable<TuvVision.Models.CompentencyMetrixView>)
                        {                          

                            <th>
                                @item.CompentencyMetrixMasterName
                            </th>

                        }
                        <th>&nbsp;</th>
                        

                    </tr>
                </thead>

                <tbody>
                  
                    
                    @foreach (var b in Model)
                    {
                        if (b.strFormFilled == "0")
                        {
                            formFilled = "NO";
                        }
                        else
                        {
                            formFilled = "YES";
                        }

                        <tr>
                           
                            <td>@b.PK_userId</td>
                            <td>@b.CandidateName</td>
                            <td>@formFilled</td>
                            <td>@b.EmployeeCategory</td>
                            <td>@b.StampNumber</td>
                            <td>@b.Location</td>
                            <td>@b.EducationalQualification  </td>                            
                            <td>@b.Designation               </td>
                            <td>@b.EmailId                   </td>
                            <td>@b.CellPhoneNumber           </td>
                            <td>@b.JoiningDate1            </td>
                            <td>@b.TotalExperienceInYears    </td>
                            <td>@b.TotalTUVExperience </td>
                            <td>@b.OverAllExp</td>
                            <td>@b.CreatedBy</td>
                            <td>@b.ApprovedBy</td>
                            <td>@b.ApprovalStatus</td>

                            @{
                                string[] ps;
                                ps = b.AutharizeLevel.Split('#');//2,3


                                foreach (string stock in ps)
                                {
                                    <td>@stock </td>
                                }
                            }

                            @if(b.ApprovalStatus.ToUpper().Contains("PENDING"))
                            {
                                if (((Session["RoleID"].ToString() == "1") || (Session["RoleID"].ToString() == "34")) && Session["UserBranchID"].ToString().Contains(b.BranchID) && b.PK_userId != Session["UserID"].ToString())
                                {
                                    <td>
                                        <button type="submit" class="btn btn-default insert-form-btn">Approve</button>
                                    </td>
                                }
                                else
                                {
                                    <td>&nbsp;</td>

                                }
                            }
                            else
                            {
                                <td>&nbsp;</td>

                            }




                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>


<script type="text/javascript" language="javascript" src="~/AllJsAndCss/datatable/js/jquery.dataTables.js"></script>


<script src="~/AllJsAndCss/js/datatable-custom2.js"></script>
