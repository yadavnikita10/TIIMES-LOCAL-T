@model TuvVision.Models.InspectorData
@using NonFactors.Mvc.Grid;
@using System.Web.Mvc;

@{
    ViewBag.Title = "Inspector Data";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}
<link href="~/AllJsAndCss/css/MVCGridN.css" rel="stylesheet" />
@using (Html.BeginForm("InspectorData", "MisReport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{

    <div class="main-content3 xs-max-height">

        <!--Start of header-->
        <div class="container-fluid">
            <div class="row assignfixedwidth rp-15">

                <div class="col-xs-12">
                    <h3 class="dynamic-page-title dynamic-page-title-2  text-left">Inspector Details</h3>
                    <button type="button" id="a" value="ExportToExcel" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" onclick="location.href='@Url.Action("ExportInspectorData", "MisReport")'" >
                        Export To Excel
                    </button>
                    
                </div>
                @if (Convert.ToString(TempData["Result"]) != null && Convert.ToString(TempData["Result"]) != "")
                {
                    <div class="col-xs-4">
                        <h4 style="color:red;font-weight:bold;">@Convert.ToString(TempData["Result"])</h4>
                    </div>
                }
                <div class="col-xs-4">

                </div>
                <div class="col-xs-12">
                    <hr class="custom-hr">
                </div><!-- /.col -->
                <!--Table was here-->

            </div><!-- /.row -->
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Month:</label>
                        @*@Html.DropDownList(model => model.FromDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select From Date", @class = "form-control form-control-custom FromD", autocomplete = "off" })*@
                        @Html.DropDownList("FromDate", null, "--Select--", new
                       {
                           @id = "FromDate",
                           @class = "form-control",
                           @style = "width:200px"
                       })


                    </div>
                </div>


                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Year:</label>
                        @*@Html.TextBoxFor(model => model.ToDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select To Date", @class = "form-control form-control-custom ToD", autocomplete = "off" })*@
                        @Html.DropDownList("ToDate", null, "--Select--", new
                        {
                            @id = "ToDate",
                            /// @onChange = "return ChangeYear(this)",
                            @class = "form-control",
                            @style = "width:200px"
                        })
                        
                    </div>

                </div>

                <div class="col-xs-2">
                    <div class="form-group">
                        <label>Search:</label>
                        @*<input type="submit" value="Search" class="btn btn-primary form-control" />*@
                        <button type="button" class="btn btn-primary form-control" id="btnSearch"> Search </button>
                    </div>

                </div>
            </div>
            

            <div class="col-xs-12">
                <table class="display dataTable no-footer" style="overflow-y:auto" id="gridMapping">
                    <tr>
                        <td>
                            @(Html
                            .Grid(Model.lst1)
                            .Build(columns =>
                            {

                                columns.Add(c => c.User).Titled("Inspector Name");
                                columns.Add(c => c.TUv_Email_ID).Titled("Email ID");
                                columns.Add(c => c.MobileNo).Titled("Mobile No");
                                columns.Add(c => c.Branch).Titled("Branch");
                                columns.Add(c => c.EmpType).Titled("Employee Type");
                                columns.Add(c => c.CallsAssigned).Titled("Call Assigned");
                                columns.Add(c => c.ClosedCalls).Titled("Closed Calls");
                                columns.Add(c => c.VisitReports).Titled("Visit Reports");
                            })
                            .Pageable(pager =>
                            {                                
                                pager.ShowPageSizes = true;
                                pager.PagesToDisplay = 3;
                                pager.CurrentPage = 1;
                                pager.RowsPerPage = 2;
                            })
                            .UsingFilterMode(GridFilterMode.Row)
                            .Empty("No data found")
                            .Filterable()
                            .Sortable()
                            )


                        </td>
                    </tr>
                </table>

            </div>


            </div><!-- /.container-fluid -->
        <!--End of header-->

    </div>
    <!--End of Ashwini Code-->


}

