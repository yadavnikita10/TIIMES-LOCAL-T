@using System.Linq;
@model TuvVision.Models.JobMasters
@{
    ViewBag.Title = "ProbableInvoicing";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}


@using (Html.BeginForm("OBSOrderValue", "MisReport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{

    <div class="main-content3 xs-max-height">

        <!--Start of header-->
        <div class="container-fluid">
            <br />

            <div class="form-group" style="padding-left:25px;">
                <h3 class="dynamic-page-title dynamic-page-title-2  text-left">OBSwise Job Creation</h3>
            </div>

            @if (Convert.ToString(TempData["Result"]) != null && Convert.ToString(TempData["Result"]) != "")
            {
                <div class="col-xs-4">
                    <h4 style="color:red;font-weight:bold;">@Convert.ToString(TempData["Result"])</h4>
                </div>
            }

            <div class="form-group" style="padding-left:25px;">
                <hr class="custom-hr1">
            </div>
            <br />
            <div class="row">

                <div class="col-xs-2" style="padding-left:50px;">

                    <label>Financial Year:</label>
                    @if (ViewBag.FinancialYear != null)
                    {
                        @Html.DropDownListFor(model => model.FYear, ViewBag.FinancialYear as IEnumerable<SelectListItem>, "--Select Financial Year--", new { @class = "form-control", @id = "FinYear", })

                    }

                </div>


                <div class="col-xs-2">

                    <label>Month:</label>
                    @if (ViewBag.MonthList != null)
                    {
                        @Html.DropDownListFor(model => model.monthID, ViewBag.MonthList as IEnumerable<SelectListItem>, "--Select Month--", new { @class = "form-control", @id = "Month", })

                    }



                </div>
                <div class="col-xs-2">
                    <label></label>
                    <button type="button" class="btn btn-primary form-control" id="btnSearch">Search</button>
                </div>
                <div class="col-xs-2">
                    <label></label>
                    <button type="button" id="a" value="ExportToExcel" class="btn btn-primary form-control" onclick="location.href='@Url.Action("ExportObsOrderValue","MisReport")'">
                        Export To Excel
                    </button>
                </div>

            </div>
            <br />


            <div class="col-xs-12">

                <div class="col-xs-12" style="overflow:auto;height:500px;width:99%">
                    <table class="display dataTable no-footer" style="width:180%;"  id="example3"  >

                        @if (ViewData["OBSOrderValue"] != null)
                        {
                            int Headcolnumber = 0;
                            Decimal TotalPrice = 0;
                            int colnumber = 0;
                            string strfield = string.Empty;

                            Decimal VGrandTotal = 0;
                            string PortfolioName = string.Empty;

                            int LastRownumber = 0;
                            int Lastcolnumber = 0;

                            var dt = ViewData["OBSOrderValue"] as System.Data.DataTable;
                            LastRownumber = dt.Rows.Count - 1;
                            Lastcolnumber = dt.Columns.Count - 1;
                                <tr style="background-color:lightblue" >
                                    @foreach (System.Data.DataColumn col in dt.Columns)
                                    {
                                        if (col.ColumnName.ToString().ToUpper() != "OBSID" && col.ColumnName.ToString().ToUpper() != "SPID")
                                        {
                                            if (col.ColumnName.ToString().ToUpper() == "PORTFOLIONAME")
                                            {
                                                <th width="300px">@col.ColumnName.ToString()</th>
                                            }
                                            else
                                            {
                                                <th width="80px">@col.ColumnName.ToString()</th>
                                            }
                                        }
                                        Headcolnumber++;
                                    }                              
                                </tr>

                                for(int rowprint = 0; rowprint < dt.Rows.Count-1; rowprint++ )
                                {
                                    colnumber = 0;
                                    <tr>
                                        @foreach (System.Data.DataColumn col in dt.Columns)
                                        {
                                            if (col.ColumnName.ToString().ToUpper() != "OBSID" && col.ColumnName.ToString().ToUpper() != "SPID")
                                            {
                                                if (dt.Rows[rowprint][col.ColumnName].ToString() == string.Empty)
                                                {
                                                        <td>0</td>
                                                }                                           
                                                else
                                                {
                                                        <td>@dt.Rows[rowprint][col.ColumnName].ToString()</td>
                                                }
                                            }
                                            colnumber++;
                                    }

                                    </tr>
                                }


                                <tr style="background-color:burlywood">
                                    @{
                                        colnumber = 0;
                                        System.Globalization.CultureInfo hindi = new System.Globalization.CultureInfo("hi-IN");
                                        
                                    }
                                    @foreach (System.Data.DataColumn col in dt.Columns)
                                    {
                                        ////Printing Total Row
                                        if (col.ColumnName.ToString().ToUpper() != "OBSID" && col.ColumnName.ToString().ToUpper() != "SPID" && col.ColumnName.ToString().ToUpper() != "TOTAL")
                                        {
                                            
                                            if (colnumber == 0)
                                            {
                                                <td>@dt.Rows[dt.Rows.Count - 1][col.ColumnName].ToString()</td>
                                            }
                                            else
                                            {
                                                int parsedAmt = int.Parse(dt.Rows[dt.Rows.Count - 1][col.ColumnName].ToString(), System.Globalization.CultureInfo.InvariantCulture);
                                                string TotalAmt = string.Format(hindi, "{0:c0}", parsedAmt);
                                                <td>@TotalAmt</td>
                                            }

                                            if (col.ColumnName.ToString().ToUpper() != "PORTFOLIONAME" && col.ColumnName.ToString().ToUpper() != "TOTAL")
                                            {
                                                VGrandTotal = VGrandTotal + Convert.ToInt32(dt.Rows[dt.Rows.Count - 1][col.ColumnName].ToString());
                                            }
                                        }

                                        decimal parsed = decimal.Parse(VGrandTotal.ToString(), System.Globalization.CultureInfo.InvariantCulture);

                                        string GrandAmttext = string.Format(hindi, "{0:c0}", parsed);

                                        if (col.ColumnName.ToString().ToUpper() == "TOTAL")
                                        {
                                            <td style="background-color:aquamarine"><b>@GrandAmttext</b></td>
                                        }
                                        colnumber++;
                                    }
                                </tr>

                                @*<tr style="background-color:cadetblue;" >
                                   <td >Grand Total</td>
                                    <td colspan="21">@VGrandTotal</td>
                                </tr>*@


                        }
                    </table>
                </div>

            </div>




    </div>

    </div>


}


