        var yearsDiff = currentDate.getFullYear() - joinDate.getFullYear();
        var monthsDiff = currentDate.getMonth() - joinDate.getMonth();

        if (currentDate.getDate() < joinDate.getDate()) {
            monthsDiff--;
        }

        if (monthsDiff < 0) {
            yearsDiff--;
            monthsDiff += 12;
        }

        if (yearsDiff >= 0 && yearsDiff <= 9) {
            yearsDiff = '0' + yearsDiff;
        }

