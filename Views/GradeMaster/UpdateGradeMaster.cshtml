@model TuvVision.Models.GradeMaster
@{
    ViewBag.Title = "UpdateGradeMaster";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
    if ((Convert.ToString(TempData["gradeMaster"])) != "" && Convert.ToString(TempData["gradeMaster"]) != null)
    {
        TempData["gradeMaster"] = null;
        <script type="text/javascript" language="javascript">
         alert("Employee Grade already added!!!!");
        </script>
    }
}

@using (Html.BeginForm("UpdateGradeMaster", "GradeMaster", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{
<div class="main-content3 xs-max-height grey-bg-f3">
