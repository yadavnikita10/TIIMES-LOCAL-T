                                                                     new SelectListItem{ Text="GRADUATE ENGINEER TRAINEE", Value = "GRADUATE ENGINEER TRAINEE" },
                                                                     new SelectListItem{ Text="ASSOCIATES", Value = "ASSOCIATES" },



                                                                     }, new { @class = "form-control", @id = "PT", @readonly = "readonly" })*@
                                                            @Html.ValidationMessageFor(m => m.EmployeeGrade, "", new { @class = "text-danger validation-msg" })
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-6">
                                                        <div class="form-group">
                                                            <label>Car Rate:</label>
                                                            @Html.TextBoxFor(model => model.CarRate, new { @placeholder = "Car Rate Here", @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.CarRate, "", new { @class = "text-danger validation-msg" })
                                                        </div>
                                                    </div>

                                                </div>


                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-6">
                                                        <div class="form-group">
                                                            <label>Motor Bike Rate:</label>
                                                            @Html.TextBoxFor(model => model.MotorBikeRate, new { @placeholder = "Motor Bike Rate Here", @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.MotorBikeRate, "", new { @class = "text-danger validation-msg" })
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-6">
                                                        <div class="form-group">
                                                            <label>OPE Rate:</label>
                                                            @Html.TextBoxFor(model => model.OPERate, new { @placeholder = "OPE Rate Here", @class = "form-control" })
