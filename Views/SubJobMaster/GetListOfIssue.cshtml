@using (Html.BeginForm("AllConcern", "VisitReport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "formiid" }))
{
    <div class="main-content3 xs-max-height">
        <div class="container-fluid">
            <div class="row assignfixedwidth rp-15">
                <div class="col-xs-12">
                    @Html.HiddenFor(m => m.PK_SubJob_Id)
                    @if (Model.Type == "InspectorCall")
                {

                }
                else
                {
                    }
                    <button type="button" id="a" value="ExportToExcel" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" onclick="location.href='@Url.Action("ExportIndex1", "SubJobMaster",new { @PK_SubJob_Id= Model.PK_SubJob_Id })'"
                            style="border:none;">
                        Export To Excel
                    </button>
                </div>
                <div class="col-xs-12">
                    @Html.HiddenFor(m => m.PK_Call_ID)
                    @Html.HiddenFor(m => m.Type)

                    @if (Model.Type == "InspectorCall")
                    {
                    }
                    else
                    { 
                    }
                </div>
                <div class="col-xs-12">
                    <h3 class="dynamic-page-title dynamic-page-title-2  text-left">Open Issues:</h3>
                </div>
                @Html.HiddenFor(m => m.PK_Call_ID)
