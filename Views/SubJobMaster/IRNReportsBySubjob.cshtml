@model TuvVision.Models.ReportModel

@{
    ViewBag.Title = "IRNReportsBySubjob";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}

@*Ashwini Scripts here for datatable starts here*@
<script type="text/javascript" language="javascript" src="~/AllJsAndCss/datatable/js/jquery.dataTables.js"></script>

<!--export to excel-->
<script type="text/javascript" language="javascript" src="~/AllJsAndCss/js/dataTables.buttons.min.js"></script>
<script type="text/javascript" language="javascript" src="~/AllJsAndCss/js/jszip.min.js"></script>
<script type="text/javascript" language="javascript" src="~/AllJsAndCss/js/buttons.html5.min.js"></script>
<script src="~/AllJsAndCss/js/datatable-custom.js"></script>
@*Ashwini Scripts here for datatable ends here*@

@using (Html.BeginForm())
{

    <div class="main-content3 xs-max-height">

        <!--Start of header-->
        <div class="container-fluid">
            <div class="row assignfixedwidth rp-15">
                <h3 class="dynamic-page-title dynamic-page-title-2  text-left">Inspection Release Note</h3>
                <div class="col-xs-12">
                    <hr class="custom-hr">
                </div><!-- /.col -->
                <!--Table was here-->

            </div><!-- /.row -->
            @*<div class="col-xs-12 text-right">

                <a href="@Url.Action("CreatSubJob", "SubJobMaster" , new {@PK_SubJob_Id = Model.PK_SubJob_Id })" class="btn btn-info dynamic-function-btn"><i class="fa fa-long-arrow-left"></i> Go Back</a>
            </div>*@
            <div class="col-xs-12">
                <table id="example" class="display custom-table" cellspacing="0" width="100%">

                    <thead>
                        <tr>
                            @*<th class="remove-search less-width">Action</th>*@
                            <th class="remove-search less-width">Sr No</th>
                            <th>Date Of Issue</th>

                            <th>IRN No </th>
                            <th>Date Of Inspection</th>
                            <th>IVR Nos.</th>
                            <th>Inspector Name</th>
                            <th>Attachments</th>
                        </tr>
                    </thead>

                    <tbody>

                        @{
                            int i = 0;
                        }
                        @foreach (var item in ViewData["CostSheet"] as IEnumerable<TuvVision.Models.ReportModel>)
                        {
                            i = i + 1;
                            <tr>
                                <td>@i</td>
                                <td> @item.ReportDate</td>
                                <td>
                                    @*<a href="~/IRNReports/@item.Report" download="@Url.Content("~/IRNReports/" +@item.Report)">*@
                                    <a href="~/IRNReports/@item.Report" download="@item.ReportName">

                                        @*<img src="~/PDF-Icon.png" height="50px" width="50px" />*@
                                        @item.ReportName
                                    </a>
                                </td>

                                <td>@item.inspectionDate</td>
                                <td>
                                    @*<a href="~/IVRReport/@item.IVRNo">
                                        @item.IVRNo
                                    </a>*@
                                    @if (item.IVRNo != null || item.IVRNo == "")
                                    {
                                        foreach (var d in item.IVRNo.Split(','))
                                        {
                                            @*<li>
                                                <a href="~/IVRReport/@d" download="@item.IVRNo">
                                                    @item.IVRNo
                                                </a>
                                            </li>*@
                                            <li>
                                                <a href="~/IVRReport/@d" download="@d">
                                                    @d
                                                </a>
                                            </li>
                                        }
                                    }
                                </td>
                                <td>@item.CreatedBy</td>
                                <td>
                                    @if (item.ImageName != null || item.ImageName == "")
                                    {
                                        foreach (var a in item.ImageName.Split(','))
                                        {
                                            @*<li>
                                                <a class="title" href="@Url.Action("DownloadFromCall", "InspectionReleaseNote", new {  @d= a })">@item.ImageName</a>

                                            </li>*@
                                            <li>
                                                @*<a href="~/Content/JobDocument/@a" download="~/Content/JobDocument/@a">
                                                    @a
                                                </a>*@
                                                <a class="title" href="@Url.Action("DownloadNew", "InspectionReleaseNote", new { @*@p = item.IDS + item.Extension,*@ @d= @a })">@a</a>
                                            </li>
                                        }

                                    }
                                    else
                                    {

                                    }
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div><!-- /.data table col -->


        </div><!-- /.container-fluid -->
        <!--End of header-->

    </div>
    <!--End of Ashwini Code-->
                            }

