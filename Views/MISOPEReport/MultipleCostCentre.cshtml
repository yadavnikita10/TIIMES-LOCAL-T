                    </div>

                </div>
            </div>

           
            



                <div class="col-xs-12" style="overflow:auto;height:500px;width:99%">
                    <table class="display dataTable no-footer" style="width:100%;" id="example3">

                        @if (ViewData["CallRegister"] != null)
                        {
                            int Headcolnumber = 0;

                            
                            string strfield = string.Empty;

                            double CRGrandTotal = 0;
                            double DRGrandTotal = 0;
                            string PortfolioName = string.Empty;

                            int LastRownumber = 0;
                            int Lastcolnumber = 0;

                            var dt = ViewData["CallRegister"] as System.Data.DataTable;

                            LastRownumber = dt.Rows.Count - 1;
                            Lastcolnumber = dt.Columns.Count - 1;

                            <tr style="background-color:lightblue">
                                @foreach (System.Data.DataColumn col in dt.Columns)
                                {
                                    <th width="300px">@col.ColumnName.ToString()</th>                                    
                                    Headcolnumber++;
                                }
                            </tr>

                            for (int rowprint = 0; rowprint < dt.Rows.Count; rowprint++)
                            {
                                System.Globalization.CultureInfo hindi = new System.Globalization.CultureInfo("hi-IN");

                            

                                <tr>
                                  
                                        <td width="300px">@dt.Rows[rowprint]["SalesOrderNo"].ToString()</td>
                                        <td width="300px">@dt.Rows[rowprint]["ClientName"].ToString()</td>
                                        
                                        <td width="300px">@dt.Rows[rowprint]["Branch_Name"].ToString()</td>
                                        
                                        
                                     
                                </tr>
                            }










                        }
                        else
                        {
                            <tr style="background-color:lightblue">
                                No Records Found
                            </tr>
                        }
                    </table>
                </div>




            </div>

    </div>
}


