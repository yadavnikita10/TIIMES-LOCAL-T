<script>
    $(document).ready(function () {
        var months = ['Select Month',
        'January', 'February', 'March', 'April', 'May', 'June',
        'July', 'August', 'September', 'October', 'November', 'December'
        ];

        var dropdown = $('#monthDropdown');

        // Loop through the months array and append options to the dropdown
        for (var i = 0; i < months.length; i++) {
            dropdown.append($('<option></option>').val(i + 1).text(months[i]));
        }

        var dropdown = $('#yearDropdown');
        var currentYear = new Date().getFullYear();
        dropdown.append($('<option></option>').text("Select Year"));
        // Bind the last 10 years to the dropdown
        for (var i = 0; i < 10; i++) {
            var year = currentYear - i;
            dropdown.append($('<option></option>').val(year).text(year));
        }
        $("#gridMapping tbody tbody tr").each(function (i, row) {
            var $actualRow = $(row);

            if($actualRow !=null)
            {
                var textval = $actualRow.find("td").eq(18).html();
                if (textval != 'undefined')
                {
                    if (textval == "1") {
                        $actualRow.find("td").eq(0).html("");
                        $actualRow.find("td").eq(1).html("");
                        $actualRow.find("td").eq(2).html("");
                        $actualRow.find("td").eq(3).html("");
                        $actualRow.find("td").eq(4).html("");
                        $actualRow.find("td").eq(5).html("");
                        $actualRow.find("td").eq(6).html("");
                        $actualRow.find("td").eq(7).html("");
                        $actualRow.find("td").eq(8).html("");
                        $actualRow.find("td").eq(9).html("");
                        $actualRow.find("td").eq(10).html("");
                        $actualRow.find("td").eq(11).html("");
                        $actualRow.find("td").eq(12).html("");
                        $actualRow.find("td").eq(13).html("");
                        $actualRow.find("td").eq(14).html("");
                        $actualRow.find("td").eq(15).html("OPE Total");

                        $actualRow.css('background-color', '#0094ff');
                    }
                    if (textval == "0") {

                        $actualRow.find("td").eq(16).html("");
                        $actualRow.find("td").eq(17).html("");



                    }
                }
            }

        });
    });


    $('#btnSearch').click(function (e) {
        debugger;
        var Month =$("#monthDropdown option:selected").text();
        var Year =$("#yearDropdown option:selected").text();
        if(Month =="Select Month"){
            alert("Please Select Month ");

        }
        else if(Year =="Select Year"){
            alert("Please Select Year ");

        }
        else{
            $.ajax({
                type: "Get",
                url: "/MISOPEReport/MISOPEReport",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: { Month: Month, Year:Year },
                success: function (response) {
                    var a = JSON.parse(response);
                    var aa = JSON.stringify(response);
                    GetVoucherList();
                },
                error: function (xhr, status, error) {
                    // Code to handle errors goes here
                }

            });
        }
    });
</script>

