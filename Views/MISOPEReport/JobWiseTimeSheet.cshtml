@model TuvVision.Models.MISJobWiseTimeSheet
@using NonFactors.Mvc.Grid;
@using System.Web.Mvc;
@{
    ViewBag.Title = "JobWiseTimeSheet";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}





@using (Html.BeginForm("JobWiseTimeSheet", "MISOPEReport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{
    <div class="main-content3 xs-max-height">

        <!--Start of header-->
        <div class="container-fluid">
            <div class="row assignfixedwidth rp-15">

                <div class="col-xs-12">
                    <h3 class="dynamic-page-title dynamic-page-title-2  text-left">Job Wise Time Sheet </h3>
                    <button type="button" value="ExportToExcel" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" onclick="location.href='@Url.Action("ExportIndexJobWiseTimeSheet","MISOPEReport")'">
                        Export To Excel
                    </button>
                </div><!-- /.col -->
                @if (Convert.ToString(TempData["Result"]) != null && Convert.ToString(TempData["Result"]) != "")
                {
                    <div class="col-xs-4">
                        <h4 style="color:red;font-weight:bold;">@Convert.ToString(TempData["Result"])</h4>
                    </div>
                }
                <div class="col-xs-4">

                </div>
                <div class="col-xs-12">
                    <hr class="custom-hr">
                </div><!-- /.col -->
                <!--Table was here-->

            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>From Date:</label>
                        @Html.TextBoxFor(model => model.FromDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select From Date", @class = "form-control form-control-custom FromD", autocomplete = "off" })
                    </div>
                </div>


                <div class="col-xs-4">
                    <div class="form-group">
                        <label>To Date:</label>
                        @Html.TextBoxFor(model => model.ToDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select To Date", @class = "form-control form-control-custom ToD", autocomplete = "off" })
                    </div>

                </div>

                <div class="col-xs-2">
                    <div class="form-group">
                        <label>Search:</label>
                        @*<input type="submit" value="Search" class="btn btn-primary form-control" />*@
                        <button type="button" class="btn btn-primary form-control" id="btnSearch"> Search </button>
                    </div>

                </div>
            </div>

            <div class="col-xs-12">
                <table class="display dataTable no-footer" style="overflow-y:auto;width:350%" id="example">

                    <thead>
                        <tr>
                            <th>Call Creation Date</th>
                            <th>Surveyor Name</th>
                            <th>Inspector Email ID</th>
                            <th>Inspector Contact Detail</th>
                            <th>Call No</th>
                            <th>Call Status</th>
                            <th>Call Created By</th>
                            <th>Coordinator EmailID</th>
                            <th>Coordinator Contact Detail</th>
                            <th>Single/Continuous Call</th>
                            <th>Actual Visit Date</th>
                            <th>Job No</th>
                            <th>Customer Name</th>
                            <th>Sub/Sub-Sub Job No</th>
                            <th>Sub Job Vendor Name</th>
                            <th>Sub-Sub Job Vendor Name</th>
                            <th>Sub Job PO No</th>
                            <th>Sub-Sub Job PO No</th>
                            <th>SAP No</th>
                            <th>Project Name</th>
                            <th>Activity Type</th>
                            <th>On Site Hrs.</th>
                            <th>Off Site Hrs.</th>
                            <th>Travel Time</th>
                            <th>Total Time</th>
                            <th>Originating Branch</th>
                            <th>Executing Branch</th>
                            <th>Description</th>
                            <th>Visit Report</th>
                            <th>Attachment</th>

                        </tr>
                    </thead>

                    <tbody>



                        @foreach (var item in ViewData["JobWiseTimeSheet"] as IEnumerable<TuvVision.Models.MISJobWiseTimeSheet>)
                        {
                            <tr>
                                <td>@item.CreatedDateTime</td>
                                <td>@item.SurveyorName</td>
                                <td>@item.TUV_Email_ID</td>
                                <td>@item.MobileNo</td>
                                <td>@item.Call_No</td>
                                <td>@item.callstatus</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.CoordinatorEmail</td>
                                <td>@item.CoordinatorNo</td>
                                <td>@item.CallType</td>
                                <td>@item.Actual_Visit_Date</td>
                                <td>@item.JOBNO</td>
                                <td>@item.ClientName</td>
                                <td>@item.Sub_Job</td>
                                <td>@item.V1</td>
                                <td>@item.V2</td>
                                <td>@item.P1</td>
                                <td>@item.P2</td>
                                <td>@item.SAP_No</td>
                                <td>@item.Project_Name</td>
                                <td>@item.ActType</td>
                                <td>@item.StartTime</td>
                                <td>@item.EndTime</td>
                                <td>@item.TravelTime</td>
                                <td>@item.TotalTime</td>
                                <td>@item.Originating_Branch</td>
                                <td>@item.EBranch_Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <a href="~/IVRReport/@item.VisitReport" download="@item.VisitReport">
                                        @item.VisitReport
                                    </a>
                                </td>

                                @if (item.VAttachment != null && item.VAttachment != "")
                                {
                                    <td>
                                        @foreach (var d in item.VAttachment.Split('!'))
                                        {
                                            var attach = d.Split('|');
                                            <li>
                                                <a class="title" href="@Url.Action("Download1", "VisitReport", new { @d = attach[2].ToString()  })">@attach[0].ToString()</a>
                                            </li>
                                        }
                                    </td>
                                }
                                else
                                {
                                    <td>&nbsp;</td>
                                }


                            </tr>
                        }

                    </tbody>

                </table>
            </div>









        </div>

    </div>
}


