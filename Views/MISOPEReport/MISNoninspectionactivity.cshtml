@using TuvVision.Models;
@model TuvVision.Models.NonInspectionActivity
@{
    ViewBag.Title = "MISNoninspectionactivity";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}




<link href="~/AllJsAndCss/css/MVCGridN.css" rel="stylesheet" />


@using (Html.BeginForm("MISNoninspectionactivity", "MISOPEReport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{
    <div class="main-content3 xs-max-height">

        <!--Start of header-->
        <div class="container-fluid">
            <div class="row assignfixedwidth rp-15">

                <div class="col-xs-12">
                    <h3 class="dynamic-page-title dynamic-page-title-2  text-left">NonInspectionActivity </h3>
                    <button type="button" id="a" value="ExportToExcel" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" onclick="location.href='@Url.Action("ExportIndexMISCallRegister", "MISOPEReport")'"
                            style="border:none;">
                        Export To Excel
                    </button>
                </div><!-- /.col -->

                @if (Convert.ToString(TempData["Result"]) != null && Convert.ToString(TempData["Result"]) != "")
                {
                    <div class="col-xs-4">
                        <h4 style="color:red;font-weight:bold;">@Convert.ToString(TempData["Result"])</h4>
                    </div>
                }
                <div class="col-xs-4">

                </div>
                <div class="col-xs-12">
                    <hr class="custom-hr">
                </div><!-- /.col -->
                <!--Table was here-->

            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>From Date:</label>
                        @Html.TextBoxFor(model => model.FromDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select From Date", @class = "form-control form-control-custom FromD", autocomplete = "off" })
                    </div>
                </div>


                <div class="col-xs-4">
                    <div class="form-group">
                        <label>To Date:</label>
                        @Html.TextBoxFor(model => model.ToDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select To Date", @class = "form-control form-control-custom ToD", autocomplete = "off" })
                    </div>

                </div>

                <div class="col-xs-2">
                    <div class="form-group">
                        <label>Search:</label>
                        @*<input type="submit" value="Search" class="btn btn-primary form-control" />*@
                        <button type="button" class="btn btn-primary form-control" id="btnSearch"> Search </button>
                    </div>

                </div>
            </div>


            <div class="col-xs-12">
                <table class="display dataTable no-footer" style="overflow-y:auto" id="gridMapping">
                    <tr>
                        <td>
                            @(Html
                            .Grid(Model.lst1)
                            .Build(columns =>
                            {



                                columns.Add(c => c.Id).Titled("Call Creation Date");
                                columns.Add(c => c.ActivityTypeName).Titled("Activity Type");
                                columns.Add(c => c.Location).Titled("Location");
                                columns.Add(c => c.StartDate).Titled("Start Date");
                                columns.Add(c => c.EndDate).Titled("End Date");
                                columns.Add(c => c.Description).Titled("Description");
                                columns.Add(c => c.CreatedBy).Titled("Created By");
                                columns.Add(c => c.CreatedDatetime).Titled("CreatedDate Time");
                                columns.Add(c => c.modifiedby).Titled("Modified By");
                                columns.Add(c => c.StartTime).Titled("Start Time");
                                columns.Add(c => c.EndTime).Titled("End Time");
                                columns.Add(c => c.TravelTime).Titled("Travel Time");
                                columns.Add(c => c.TotalTime).Titled("Total Time");
                                columns.Add(c => c.Type).Titled("Type");
                                columns.Add(c => c.PK_Call_ID).Titled("Pk_Call_Id");
                                columns.Add(c => c.DateSE).Titled("Date");
                                columns.Add(c => c.JobNumber).Titled("Job Number");
                                columns.Add(c => c.ODTime).Titled("OD Time");
                                columns.Add(c => c.SAP_No).Titled("SAP_No");
                                columns.Add(c => c.Status).Titled("Status");
                                columns.Add(c => c.reason).Titled("Reason");
                                columns.Add(c => c.NewExistingCustomer).Titled("New Existing Customer");
                                columns.Add(c => c.DomesticInternationVisit).Titled("New Existing Customer");
                                columns.Add(c => c.op_number).Titled("OP Number");
                                columns.Add(c => c.stage).Titled("Stage");
                                columns.Add(c => c.IsSendForApproval).Titled("IsSendForApproval");
                                columns.Add(c => c.ActivityType).Titled("Activity Type");
                                columns.Add(c => c.PK_SubJob_Id).Titled("PK_SubJob_Id");
                                columns.Add(c => c.modifieddate).Titled("modifieddate");
                                columns.Add(c => c.IsSendForAprrovalDate).Titled("IsSendForAprrovalDate");
                                columns.Add(c => c.CostCenter).Titled("CostCenter");
                                

                            })
                            .Pageable(pager =>
                            {
                                //pager.PageSizes = new DictionaryInt32, String > { { 0, "All" }, { 2, "2" }, { 4, "4" } };
                                pager.ShowPageSizes = true;
                                pager.PagesToDisplay = 3;
                                pager.CurrentPage = 1;
                                pager.RowsPerPage = 2;
                            })
                            .UsingFilterMode(GridFilterMode.Row)
                            .Empty("No Data Found")
                            .Filterable()
                            .Sortable()

                            )


                        </td>
                    </tr>
                </table>

            </div>

        </div>

    </div>
}


