@model TuvVision.Models.TOYOMIS

@using NonFactors.Mvc.Grid;
@using System.Web.Mvc;
@{
    ViewBag.Title = "Vendor MIS";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
}

<link href="~/AllJsAndCss/css/MVCGridN.css" rel="stylesheet" />


@using (Html.BeginForm("VendorMIS", "MISOPEReport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form1" }))
{
    <div class="main-content3 xs-max-height">

        <!--Start of header-->
        <div class="container-fluid">
            <div class="row assignfixedwidth rp-15">

                <div class="col-xs-12">
                    <h3 class="dynamic-page-title dynamic-page-title-2  text-left">Vendorwise MIS Report </h3>
                    <button type="button" id="a" value="ExportToExcel" class="btn btn-info dynamic-function-btn dynamic-function-btn-2" onclick="location.href='@Url.Action("ExportIndexTOYOMIS", "MISOPEReport")'"
                            style="border:none;">
                        Export To Excel
                    </button>
                </div><!-- /.col -->
               
                @if (Convert.ToString(TempData["Result"]) != null && Convert.ToString(TempData["Result"]) != "")
                {
                    <div class="col-xs-4">
                        <h4 style="color:red;font-weight:bold;">@Convert.ToString(TempData["Result"])</h4>
                    </div>
                }
                <div class="col-xs-4">
                  
                </div>
                <div class="col-xs-12">
                    <hr class="custom-hr">
                </div><!-- /.col -->
                <!--Table was here-->

            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>From Date:</label>
                        @Html.TextBoxFor(model => model.FromDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select From Date", @class = "form-control form-control-custom FromD", autocomplete = "off" })
                    </div>
                </div>


                <div class="col-xs-4">
                    <div class="form-group">
                        <label>To Date:</label>
                        @Html.TextBoxFor(model => model.ToDate, "{0:dd MMM yyyy}", htmlAttributes: new { placeholder = "Select To Date", @class = "form-control form-control-custom ToD", autocomplete = "off" })
                    </div>

                </div>

                <div class="col-xs-2">
                    <div class="form-group">
                        <label>Search:</label>
                        @*<input type="submit" value="Search" class="btn btn-primary form-control" />*@
                        <button type="button" class="btn btn-primary form-control" id="btnSearch"> Search </button>
                    </div>

                </div>
            </div>

           
            <div class="col-xs-12">
                <table class="display dataTable no-footer" style="overflow-y:auto" id="gridMapping">
                    <tr>
                        <td>
                            @(Html
                            .Grid(Model.lstProject)
                            .Build(columns =>
                            {

                                columns.Add(c => c.client).Titled("Client Name");
                                columns.Add(c => c.Job).Titled("Job Number");
                                columns.Add(c => c.SubJob).Titled("Sub Job Number");
                                columns.Add(c => c.Project).Titled("Project Name");
                                columns.Add(c => c.VendorName).Titled("Vendor Name");
                                columns.Add(c => c.SubVendorName).Titled("Sub Vendor Name");
                                columns.Add(c => c.Requisition_No).Titled("Purchase Order No");
                                columns.Add(c => c.Inspection_Location).Titled("Inspection Location");
                                columns.Add(c => c.Discipline).Titled("Discipline");
                                columns.Add(c => c.PO_Quantity).Titled("PO Quantity");
                                columns.Add(c => c.Ammend_Quantity).Titled("Ammend Quantity");
                                columns.Add(c => c.Offered_Quanity).Titled("Offered Quanity");
                                columns.Add(c => c.Notification_Received_Date).Titled("Notification Received Date");
                                columns.Add(c => c.Proposed_Date_of_Inspection_From).Titled("Proposed_Date_of_Inspection_From");
                                columns.Add(c => c.Proposed_Date_of_Inspection_To).Titled("Proposed_Date of Inspection To");
                                columns.Add(c => c.Actual_Visit_Date_of_Inspection_From).Titled("Actual_Visit_Date_of Inspection From");
                                columns.Add(c => c.Actual_Visit_Date_of_Inspection_To).Titled("Actual_Visit_Date_of_Inspection_To");
                                columns.Add(c => c.No_of_Days).Titled("No_of_Days");
                                columns.Add(c => c.Delay_of_Inspection).Titled("Delay for Inspection");
                                columns.Add(c => c.Surveyor_Name).Titled("Surveyor Name");
                                columns.Add(c => c.InspectionActivity).Titled("Inspection Activity");
                                columns.Add(c => c.Inspection_Report).Titled("Inspection Visit Report No & Date");
                                columns.Add(c => c.CanIRNbeIssued).Titled("Can IRN be Issued");
                                columns.Add(c => c.POIRNItemCode).Titled("Item Code");
                                columns.Add(c => c.POSrNo).Titled("Item Sr No.");
                                columns.Add(c => c.Release_Note).Titled("Release Note No");
                                columns.Add(c => c.Final_IRN_Issued_Date).Titled("Final IRN Issued Date");
                                columns.Add(c => c.Details_of_Area_of_Concern).Titled("Details of Area of Concern");
                                columns.Add(c => c.IRN_Quantity).Titled("IRN Release Quantity");
                                columns.Add(c => c.Pending_Activities).Titled("Pending Activities");
                                //columns.Add(c => c.Areas_of_Concers_if_Any).Titled("Areas of Concers if Any");
                                columns.Add(c => c.Updated_Remark).Titled("Updated Remark");

                                
                                
                                


                            })
                            .Pageable(pager =>
                            {

                                pager.ShowPageSizes = true;
                                pager.PagesToDisplay = 3;
                                pager.CurrentPage = 1;
                                pager.RowsPerPage = 2;
                            })
                            .UsingFilterMode(GridFilterMode.Row)
                            .Empty("No Data Found")
                            .Filterable()
                            .Sortable()

                            )


                        </td>
                    </tr>
                </table>

                </div>

            </div>

    </div>
}


