      .table-container {
        width: 50vw;
        margin: 13px;
        background-color: white;
        border-radius: 10px;
        padding: 10px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed; /* Ensures columns are equally spaced */
      }
      th, td {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
        word-wrap: break-word; /* Prevents long text from breaking the layout */
      }
      th {
        font-weight: bold;
      }
      .submit {
        width: 50vw;
        display: flex;
        justify-content: flex-start;
      }
      button {
        margin: 13px;
        margin-left: 0;
        padding: 8px 19px;
        border-radius: 3px;
        background-color: #663ab5;
        border: none;
        color: white;
      }
      button:hover {
        background-color: #452286;
        transition: ease-in 200ms;
      }
      .rule {
        width: 50vw;
        margin-top: 15px;
        font-size: 13px;
        color: grey;
      }
      .policy {
        font-size: 14px;
        color: grey;
      }
      .policy a {
        text-decoration: none;
        color: grey;
        /*text-decoration: underline;*/
      }
      img {
        margin-top: 13px;
        height: 200px;
        width: 50vw;
        object-fit: fill;
        border-radius: 10px;
      }

      .Google {
        text-align: center;
      }

      @@media only screen and (max-width: 1000px) {
        img, .main, .name, .email, .submit, .rule, .policy, .Google, .table-container {
width: 50vw;
        max-width: 600px; /* Limits the max width on larger screens */
        background-color: white;
        margin: 13px;
        padding: 20px; /* Adds consistent padding to all sections */
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Adds a subtle shadow to elevate the sections */
           }
        img {
          height: 125px;
        }
        .main {
          height: 180px;
          font-size: 12px;
        }
        .name, .email {
          height: 110px;
