        }
        .main h1 {
          font-size: 18px;
        }
        .main p, h4 {
          margin: 10px 0px;
        }
        input[type="text"], input[type="email"] {
          padding: 5px;
        }
        button {
          padding: 10px 22px;
          border-radius: 5px;
        }
        table th, table td {
          font-size: 12px;
          padding: 8px;
        }
      }
