<style>
    .ifa {
        pointer-events: none;
    }

    .dataTables_filter, .dataTables_info {
        display: none;
    }
</style>

    @using (Html.BeginForm("LeaveManagementApprover", "Leave", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    

        <div class="main-content3 xs-max-height">

            <!--Start of header-->
            <div class="container-fluid">
                <div class="row assignfixedwidth rp-15">
                 
                    <!-- /.col -->
                    <!--Table was here-->
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-12 col-sm-4">

                                <h3 class="dynamic-page-title dynamic-page-title-2  text-left">Leave Management</h3>

                            </div>
                            <div class="col-xs-12 col-sm-8">
                                @*<a href="@Url.Action("LeaveApprovalList","Leave")" class="btn btn-default news-btn" style="float:right;"><i class="fa fa-long-arrow-left"></i> Go Back</a>*@
                                <button class="btn btn-default news-btn" type="button" style="float:right;margin-right:10px;" onclick="location.href='@Url.Action("AllLeave", "Leave")'">Action Taken Leaves</button>

                            </div>

                        </div>
                    </div>
                   
                    <div class="col-xs-12">
                        <hr class="custom-hr">
                    </div><!-- /.col -->

                </div>

                <div class="row">


                    <div class="col-xs-12" id="Lessiondata">
                        <table id="example" class="display custom-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Approve / Reject</th>
                                    @*<th>Approvel Status</th>*@
                                    <th>Employee Name</th>
                                    <th>Selected Dates</th>
                                    <th>Type of Leaves</th>
                                    <th>Reason</th>
                                    <th>Are leaves due to safety incident </th>
                                    <th>Leave Application Form</th>
                                    <th>Medical Certificate</th>
                                    <th>Unique Number (UIN)</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.dtLeave != null && Model.dtLeave.Rows.Count != 0)
                                {
                                    for (
                                        int cnt = 0; cnt < Model.dtLeave.Rows.Count; cnt++)
                                    {
                                        System.Data.DataRow row = Model.dtLeave.Rows[cnt];
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("ChangeApproval", "Leave", new { @ID = @row["Universal_ID"] })" title="Approved"><span class="fa fa-times"></span>&nbsp;</a>
                                                <a href="@Url.Action("RejectApprover", "Leave", new { @ID = @row["Universal_ID"] })" title="Reject"><span class="fa fa-check"></span>&nbsp;</a>
                                            </td>
                                            @*<td>@row["Status"]</td>*@
                                            <td align="left">@row["Name"]</td>
                                            <td align="left">@row["Startdate"]</td>
                                            <td align="left">@row["ActivityType"]</td>
                                            @*<td align="left" title="@row["Reason"]"><img src="~/View1.png" /></td>*@
                                            <td><span class="tooltip-container" data-toggle="tooltip" data-placement="top" title="@row["Reason"]"> <img src="~/View1.png" /></span></td>
                                            @*<td align="left">@row["Reason"]</td>*@
                                            <td align="left">@row["ChkLTILeave"]</td>
                                            @if (row["LeaveApplication"] != null && row["LeaveApplication"].ToString() != "")
                                            {
                                                var attach6 = row["LeaveApplication"].ToString().Split(',');

                                                <td align="left" width="50px">
                                                    @for (int ar1 = 0; ar1 < attach6.Length; ar1++)
                                                    {
                                                        var attach6PCert = attach6[ar1].ToString().Split('|');


                                                        <a class="title" href="@Url.Action("Download1", "Leave", new { @d = attach6PCert[1].ToString(),@TableType = "other" })"><img src="~/View1.png" /></a><br />
                                                    }
                                                </td>
                                            }
                                            else
                                            {
                                                <td align="left" width="50px">&nbsp;</td>
                                            }
                                            @if (row["Seak"] != null && row["Seak"].ToString() != "")
                                            {
                                                var attach6 = row["Seak"].ToString().Split(',');

                                                <td align="left" width="50px">
                                                    @for (int ar1 = 0; ar1 < attach6.Length; ar1++)
                                                    {
                                                        var attach6PCert = attach6[ar1].ToString().Split('|');


                                                        <a class="title" href="@Url.Action("Download1", "Leave", new { @d = attach6PCert[1].ToString(),@TableType = "seak" })"><img src="~/View1.png" /></a><br />
                                                    }
                                                </td>
                                            }
                                            else
                                            {
                                                <td align="left" width="50px">&nbsp;</td>
                                            }
                                            <td align="left">@row["uniqueNumber"]</td>








                                        </tr>
                                    }
                                }

                            </tbody>

                        </table>



                    </div>
                    <table class="display dataTable no-footer" style="overflow-y:auto" id="gridMapping">
                       
                    <tr>
                        @if (Model.lst1.Count > 0)
                           {
                            <td>
                               
                                @(Html
                            .Grid(Model.lst1)
                            .Build(columns =>
                            {
                                 
                                columns.Add(c => c.UniversalID).Titled("MoveTo Request").RenderedAs(c => CustomRenderingOfColumn(c)).Sortable(true);
                                columns.Add(c => c.FirstName).Titled("Employee Name");
                                columns.Add(c => c.FromD).Titled("Date");
                                columns.Add(c => c.Reason).Titled("Reason");
                                columns.Add(c => c.ChkLTILeavestring).Titled("Are leaves due to safety incident");
                                columns.Add(c => c.uniqueNumber).Titled("Unique number");



                       


                            })
                            .Pageable(pager =>
                            {
                                pager.ShowPageSizes = true;
                                pager.PagesToDisplay = 3;
                                pager.CurrentPage = 1;
                                pager.RowsPerPage = 2;
                            })
                            .UsingFilterMode(GridFilterMode.Row)
                            .Empty("No data found")
                            .Filterable()
                            .Sortable()
                                )
                           

                            </td>
                        }
                       
                        </tr>

                  
                      
                    </table><br />
                </div>

              
            </div>

        </div>
    
}





