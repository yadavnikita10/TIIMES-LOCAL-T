@model IEnumerable<TuvVision.Models.QuizModel> 
@{
    ViewBag.Title = "FeedbackList";
    Layout = "~/Views/Shared/_TuvVision.cshtml";
    int i = 0;
}

@using (Html.BeginForm())
{

    <div class="main-content3 xs-max-height grey-bg-f3">
        <div class="grey-bg-f3">
            <!--Start of header-->
            <div class="container-fluid">
                <div class="row assignfixedwidth rp-5">

                    <div class="col-xs-12 form-col">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <br />
                                <button type="button" id="a" value="ExportToExcel" class="btn btn-default insert-form-btn" onclick="location.href='@Url.Action("ExportFeedbackReport", "Quiz", new { @sid = ViewBag.id})'"
                                        style="border:none;">
                                    Export To Excel
                                </button>
                                <a href="@Url.Action("TopicList", "Quiz")" class="btn btn-default insert-form-btn"><i class="fa fa-long-arrow-left"></i> Go Back</a>
                            </div>
                            <br />
                            <br />
                            <div class="col-xs-12">
                                <br />
                                
                                <div class="white-bg section-box-shadow">
                                    
                                    <h3 class="form-page-title">Training Feedback List</h3>
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                                            <div class="form-box">
                                                <form>
                                                    <div class="row">
                                                        <div class="col-xs-12 col-sm-4">
                                                            
                                                        </div>
                                                    </div>

                                                    @*<h3 class="form-page-title">@ViewBag.TrngNm</h3>*@
                                                    <div>
                                                        @{
                                                            if (Convert.ToString(TempData["Success"]) != null && Convert.ToString(TempData["Success"]) != "")
                                                            {
                                                                <h5 style="color:green;font-weight:bold;">@Convert.ToString(TempData["Success"])</h5>
                                                            }
                                                            if (Convert.ToString(TempData["Deleted"]) != null && Convert.ToString(TempData["Deleted"]) != "")
                                                            {
                                                                <h5 style="color:red;font-weight:bold;">@Convert.ToString(TempData["Deleted"])</h5>
                                                            }
                                                            if (Convert.ToString(TempData["Error"]) != null && Convert.ToString(TempData["Error"]) != "")
                                                            {
                                                                <h5 style="color:red;font-weight:bold;">@Convert.ToString(TempData["Error"])</h5>
                                                            }
                                                        }
                                                    </div>

                                                    <div class="col-xs-12">
                                                        @*<table id="example" class="display" cellspacing="0" width="100%">*@
                                                        <table id="example" class="display" cellspacing="0" width="100%">
                                                            <thead>
                                                                <tr>
                                                                    <th>Sr.No</th>
                                                                    <th>Trainee Name</th>
                                                                    <th>Overall Rating</th>
                                                                    <th>Feedback File</th>
                                                                    @*<th>Remark</th>*@
                                                                </tr>
                                                            </thead>

                                                            <tbody>
                                                                @*@Html.HiddenFor(m => m.RTrainingScheduleId, new { Value = ViewBag.Data })*@

                                                                @foreach (var v in ViewBag.FeedbackList as IEnumerable<TuvVision.Models.QuizModel>)
                                                                {
                                                                    i = i + 1;
                                                                    <tr>
                                                                        <td scope="row"> @i </td>
                                                                        <td>
                                                                            @v.UserID
                                                                        </td>
                                                                        <td>
                                                                            @v.Question
                                                                        </td>
                                                                        <td>
                                                                            <a href='@Url.Content(@v.Answer)' target="_blank">@v.UserID</a>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

