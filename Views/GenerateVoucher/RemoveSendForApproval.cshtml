    function GetVoucherList() {
        debugger;
        $("#hidetable").show();
        var voucherno = $("#txtvoucherno").val();
        var UrlLink = '@UrlLink';
        $.ajax({
            type: "GET",
            url: UrlLink + "/GenerateVoucher/GetVoucherList_ForRemoveApproval",
